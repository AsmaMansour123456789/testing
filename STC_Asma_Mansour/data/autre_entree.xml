<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="prime_stc" model="hr.payslip.input.type">
            <field name="name">Prime Fin d'année N</field>
            <field name="code">PRIME_N</field>
        </record>
        <record id="prime_n1_stc" model="hr.payslip.input.type">
            <field name="name">Prime Fin d'année N-1</field>
            <field name="code">PRIME_N_1</field>
        </record>
        <record id="prime_n2_stc" model="hr.payslip.input.type">
            <field name="name">Prime Fin d'année N-2</field>
            <field name="code">PRIME_N_2</field>
        </record>
        <record id="prime_n3_stc" model="hr.payslip.input.type">
            <field name="name">Prime Fin d'année N-3</field>
            <field name="code">PRIME_N_3</field>
        </record>

        <record id="prime_pro_stc" model="hr.payslip.input.type">
            <field name="name">Prime de Productivité N</field>
            <field name="code">PRIME_PRO_N</field>
        </record>
        <record id="prime_pro_n1_stc" model="hr.payslip.input.type">
            <field name="name">Prime de Productivité N-1</field>
            <field name="code">PRIME_PRO_N_1</field>
        </record>
        <record id="prime_pro_n2_stc" model="hr.payslip.input.type">
            <field name="name">Prime de Productivité N-2</field>
            <field name="code">PRIME_PRO_N_2</field>
        </record>
        <record id="prime_pro_n3_stc" model="hr.payslip.input.type">
            <field name="name">Prime de Productivité N-3</field>
            <field name="code">PRIME_PRO_N_3</field>
        </record>

        <record id="indem_depart_stc" model="hr.payslip.input.type">
            <field name="name">indemnité de départ</field>
            <field name="code">INDEM_DEP</field>
        </record>

        <record id="hr_payslip_run_form" model="ir.ui.view">
            <field name="name">hr.payslip.run.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='credit_note']" position="after">
                    <field name="stc" />
                    <field name="paie_par_jour" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>